<?xml version="1.0" encoding="utf-8"?>
<document type="freeswitch/xml">
  <section name="dialplan">
    <context name="default">
      <extension name="menu">
        <condition field="destination_number" expression="^\*5000$">
          <action application="answer"/>
          <action application="ivr" data="demo_ivr"/>
        </condition>
      </extension>
      <extension name="support">
        <condition field="destination_number" expression="^\*5001$">
          <action application="answer"/>
          <action application="playback" data="/usr/local/freeswitch/conf/audios/support.wav"/>
        </condition>
      </extension>
      <extension name="shipping">
        <condition field="destination_number" expression="^\*5002$">
          <action application="answer"/>
          <action application="playback" data="/usr/local/freeswitch/conf/audios/shipping.wav"/>
        </condition>
      </extension>
      <extension name="name_directory">
        <condition field="destination_number" expression="^\*5004$">
          <action application="answer"/>
          <action application="playback" data="/usr/local/freeswitch/conf/audios/name_directory.wav"/>
        </condition>
      </extension>
      <extension name="extension_directory">
        <condition field="destination_number" expression="^\*5005$">
          <action application="answer"/>
          <action application="playback" data="/usr/local/freeswitch/conf/audios/extension_directory.wav"/>
        </condition>
      </extension>
      <extension name="reception">
        <condition field="destination_number" expression="^\*2000$">
          <action application="answer"/>
          <action application="playback" data="/usr/local/freeswitch/conf/audios/reception.wav"/>
        </condition>
      </extension>
      <extension name="pkm">
        <condition field="destination_number" expression="1000">    
          <action application="answer"/>
      	  <action application="playback" data="/usr/local/freeswitch/conf/audios/pokemon.wav"/>
        </condition>
      </extension>
      <extension name="call">
        <condition field="destination_number" expression="^10[01][0-9]$">
          <action application="bridge" data="user/${destination_number}"/>
          <action application="answer"/>
          <action application="sleep" data="1000"/>
          <action application="bridge" data="loopback/app=voicemail:default ${domain_name} ${dialed_extension}"/>
        </condition>
      </extension>
      <extension name="voicemail">
        <condition field="destination_number" expression=".*">    
          <action application="bridge" data="loopback/app=voicemail:default ${domain_name} ${dialed_extension}"/>
        </condition>
      </extension>
    </context>
  </section>
</document>
